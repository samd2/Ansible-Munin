server {
  listen {{ munin_web_server_port }};
  server_name munin {{ munin_public_domain }} {{ ansible_fqdn }};
  access_log {{ nginx_log_dir }}/nginx_access.log;
  error_log {{ nginx_log_dir }}/nginx_error.log;

  location /munin {
    root {{ munin_htmldir }};
  }

{% if munin_server_auth_method == 'open' %}
  location / {
    #auth_basic "Munin Server";
    #auth_basic_user_file {{ munin_basedir }}/htpasswd.users;
    root {{ munin_htmlrootdir }};
  }
{% else %}
  location / {
    auth_basic "Munin Server";
    auth_basic_user_file {{ munin_basedir }}/htpasswd.users;
    root {{ munin_htmlrootdir }};
  }
{% endif %}

}
